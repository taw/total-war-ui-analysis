#!/usr/bin/env ruby

require_relative "../lib/task_set"

task_set = TaskSet.new(*ARGV)

# In 4 threads
cores = 4
cores.times.map{|i|
  Thread.new{
    while true
      todo = task_set.todo.shift or break

      todo.output_path.parent.mkpath
      puts "#{i} #{todo.data_path}"
      system %Q[#{__dir__}/analysis "#{todo.data_path}" >"#{todo.output_path}"]
    end
  }
}.map(&:join)
