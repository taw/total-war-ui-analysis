#!/usr/bin/env ruby

require_relative "../lib/task_set"

task_set = TaskSet.new(*ARGV)
task_set.todo.select!(&:supported_by_ui2xml?)

converter_path = Pathname(__dir__) + "ui2xml"

# In 4 threads
cores = 4
cores.times.map{|i|
  Thread.new{
    while true
      todo = task_set.todo.shift or break

      todo.unpacked_path.parent.mkpath
      puts "#{i} #{todo.data_path}"
      err = system %Q[#{converter_path} "#{todo.data_path}" "#{todo.unpacked_path}"]

      if err
        todo.unpacked_fail_path.unlink if todo.unpacked_fail_path.exist?
      else
        todo.unpacked_path.rename todo.unpacked_fail_path
      end
    end
  }
}.map(&:join)
